{
  "name": "set-vercel-env",
  "version": "0.1.16",
  "description": "Use a dotenv file to set the Vercel env",
  "license": "MIT",
  "author": "Sunny Hirai",
  "files": [
    ".dist/*",
    ".dist/**/*"
  ],
  "main": ".dist/cjs/src/index.js",
  "module": ".dist/mjs/src/index.js",
  "types": ".dist/cjs/src/index.d.ts",
  "bin": {
    "set-vercel-env": "./.dist/src/index.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@thesunny/assert-type": "^0.1.7",
    "@types/debug": "^4.1.5",
    "@types/jest": "^27",
    "@types/minimist": "^1.2.1",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "concurrently": "^7.2",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-no-secrets": "^0.8.9",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-simple-import-sort": "^7.0",
    "jest": "^27",
    "prettier": "^2",
    "rollup": "^2.59.0",
    "rollup-plugin-sizes": "^1.0.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^27",
    "ts-node": "^10.9.1",
    "tsc": "^2.0.4",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@thesunny/script-utils": "^0.1.29",
    "chalk": "^4.1.2",
    "dotenv": "^14.3.2",
    "superstruct": "^0.15.3"
  },
  "scripts": {
    "build:rollup": "rm -rf ./.dist/ && rollup --config rollup.config.js",
    "build:tsc": "rm -rf ./.dist && tsc -p tsconfig.tsc.json && echo 'Finished tsc build'",
    "prepublish": "yarn build:tsc && yarn version --patch && echo '\"npm publish --access=public\" to publish to npm'",
    "-- dev": "# Run the script directly from the src files",
    "dev": "ts-node --project tsconfig.json ./src/index.ts",
    "production": "node .dist/index.js",
    "-- update": "# Update this CLI starter kit",
    "update:kit": "git pull git@github.com:thesunny/cli-starter-kit.git",
    "-- example": "# Run an example",
    "example": "ts-node src example.env",
    "-- preset": "# Run preset from @thesunny/presets",
    "preset": "ts-node --project node_modules/@thesunny/presets/tsconfig.ts-node.json node_modules/@thesunny/presets/bin/index.ts",
    "-- tsc": "# Compile Typescript",
    "--- test": "#",
    "test:once": "yarn test:clearcache && jest --config=jest.config.js",
    "test:watch": "jest --watch --config=jest.fast.config.js",
    "test:watch:types": "yarn test:clearcache && jest --watch --config=jest.config.js",
    "test:clearcache": "jest --clearCache",
    "-- fix": "# fix syntax",
    "fix:prettier": "yarn lint:prettier --write",
    "fix:eslint": "yarn lint:eslint --fix",
    "-- lint": "# lint syntax",
    "lint": "concurrently 'yarn lint:prettier' 'yarn lint:eslint' 'yarn lint:tsc'",
    "lint:prettier": "prettier --check \"**/*.{css,md,js,jsx,json,ts,tsx}\"",
    "lint:eslint": "eslint .",
    "lint:tsc": "tsc --build ./ --force",
    "--- build npm": "# build npm",
    "build:once": "yarn build:clear && yarn test:once && concurrently 'yarn build:cjs' 'yarn build:mjs' && echo 'Finished Building'",
    "build:watch": "build:clear && tsc -p tsconfig.ts-build.json --watch",
    "build:clear": "rm -rf ./.dist/",
    "build:cjs": "tsc -p tsconfig.build-cjs.json",
    "build:mjs": "tsc -p tsconfig.build-mjs.json",
    "-- publish npm": "# publish npm package",
    "publish:npm": "yarn build:once && yarn publish || yarn publish:first",
    "publish:npm:patch": "yarn build:once && yarn version --patch && yarn publish --non-interactive || yarn publish:first",
    "publish:first": "echo 'IMPORTANT INSTRUCTIONS: This is first publish so please use:\n\n\"npm publish --access=public\"'",
    "-- end": "# end"
  }
}
